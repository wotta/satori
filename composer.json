{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "wottavm/satori",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "filament/filament": "^4.0",
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.33",
        "laravel/prompts": "^0.3.6",
        "laravel/tinker": "^2.10.1",
        "nunomaduro/essentials": "^0.1",
        "tightenco/ziggy": "^2.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel-shift/blueprint": "^2.12",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.44",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "rector/rector": "^2.1",
        "veewee/composer-run-parallel": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "dev:ssr": [
            "npm run build:ssr",
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"php artisan inertia:start-ssr\" --names=server,queue,logs,ssr --kill-others"
        ],
        "parallel:test": "@parallel test:config-clear test:artisan-test test:refactor test:typos test:phpstan test:pint",
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test",
            "@test:refactor",
            "@test:typos",
            "@test:phpstan",
            "@test:pint"
        ],
        "parallel:fix:test": "@parallel pint refactor",
        "test:config-clear": "@php artisan config:clear --ansi",
        "test:artisan-test": "@php artisan test",
        "test:refactor": "./vendor/bin/rector process --dry-run",
        "test:typos": "./vendor/bin/peck",
        "test:phpstan": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "test:pint": "./vendor/bin/pint --test --parallel",
        "refactor": "./vendor/bin/rector process",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "phpstan-baseline": "./vendor/bin/phpstan analyse --generate-baseline --memory-limit=256M",
        "pint": "./vendor/bin/pint --parallel"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "veewee/composer-run-parallel": true
        }
    },
    "suggest": {
        "prism-php/prism": "Adds prism LLM functionality for our project. Read more: https://prismphp.com/getting-started/introduction.html",
        "openai-php/client": "OpenAI package. Read more: https://github.com/openai-php/client"
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
